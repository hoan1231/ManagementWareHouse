
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryUrl/jquery.url.js" type="text/javascript"></script>
<link href="/crm_manager/CSS/Menu.css" rel="stylesheet" />
<script src="/crm_manager/js/jquery.mptelecom.js"></script>
<script src="~/ware_product/Js/Products.js"></script>
<link rel="stylesheet" href="/Content/dist/checkstyle/build.css" />


<div class="box box-warning">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Sản phẩm</h3>
        <span style="float:right;">
            <a data-toggle="dropdown" class="dropdown-toggle" id="modalAdd" href="#">
                <i class="fa fa-plus-circle" data-placement="left" title="" data-original-title="Thêm mới"></i>Thêm mới
            </a>
        </span>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Sản phẩm</label>
                    <select id="ddlCustomer" style="width:100%;" class="form-control select2 input-sm select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                        <option value="">--Chọn--</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Tên sản phẩm</label>
                    <input type="text" id="txtName" value="05/05/2019" class="form-control input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Từ ngày </label>
                    <input type="text" id="txtFrom" value="05/05/2019" class="form-control input-datepicker input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Đến ngày</label>
                    <input type="text" id="txtTo" value="05/10/2019" class="form-control input-datepicker input-sm">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="form-group">
                <button id="btnSearch" class="btn btn-primary btn-sm" type="button">
                    <i class="fa fa-search"></i>&nbsp; Tìm kiếm
                </button>
                <button id="btnExport" type="button" class="btn btn-warning btn-sm">
                    <i class="fa fa-file-excel-o">&nbsp;Xuất Excel</i>
                </button>
            </div>

        </div>
    </div>
    <hr>
    <div class="box box-warning">
        <div class="box-header with-border">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Kết quả tìm kiếm</h3>
        </div>
        <div class="box-body">
            <div style="overflow: auto">
                <table id="tblProduct" class="table table-bordered table-hover">
                    <thead class="scroll-table">
                        <tr class="success">
                            <th>STT</th>
                            <th>Ảnh</th>
                            <th>Mã SP</th>
                            <th>Tên SP</th>
                            <th>Nhãn hiệu</th>
                            <th>Danh mục</th>
                            <th>Chi phí</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Đơn vị</th>
                            <th>SL cảnh báo nhập hàng</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody id="tbdProduct">
                        <tr>
                            <td>1</td>
                            <td>Ảnh1</td>
                            <td>ADE_001</td>
                            <td>Sữa rửa mặt</td>
                            <td>Nhãn hiệu 1</td>
                            <td>Danh mục</td>
                            <td>150000</td>
                            <td>90000</td>
                            <td>45</td>
                            <td>VND</td>
                            <td>30</td>
                            <td>
                                <div class="text-center">
                                    <div class="btn-group text-left">
                                        <button type="button" class="btn btn-default btn-xs btn-primary dropdown-toggle" data-toggle="dropdown">Tác vụ <span class="caret"></span></button>
                                        <ul class="dropdown-menu pull-right" role="menu">
                                            <li><a href="#" id="modalDetail"><i class="fa fa-file-text-o"></i> Chi tiết sản phẩm</a></li>
                                            <li><a href="#"><i class="fa fa-edit"></i> Sửa sản phẩm</a></li>
                                            <li><a href="#" data-type="image" data-toggle="lightbox"><i class="fa fa-file-photo-o"></i> Xem ảnh</a></li>
                                            <li><a href="#"><i class="fa fa-print"></i> In mã vạch/nhãn</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#"><i class="fa fa-trash-o"></i> Xóa sản phẩm</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <br>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>



