
@{
    ViewBag.Title = "SupplierStatistics";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fromDate = ViewData["fromDate"];
    var toDate = ViewData["toDate"];
}

<div class="box box-danger">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Thống kê nhà cung cấp</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Kho hàng</label>
                    <select id="ddl" style="width:100%;" class="form-control select2 input-sm select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                        <option value="">--Chọn--</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Tên nhà cung cấp</label>
                    <input type="text" id="txtName" class="form-control input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" id="txtName" class="form-control input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Từ ngày </label>
                    <input type="text" id="txtFrom" value="@fromDate" class="form-control input-datepicker input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Đến ngày</label>
                    <input type="text" id="txtTo" value="@toDate" class="form-control input-datepicker input-sm">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <button class="btn btn-primary btn-sm" style="width: 80px" id="btnSearch">Tìm kiếm</button>
                    <button class="btn btn-warning btn-sm" style="width: 80px" id="btnExcel">Xuất excel</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <table id="tblReport" class="table table-bordered table-hover">
                    <thead class="scroll-table">
                        <tr class="success">
                            <th>STT</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Tổng lần nhập hàng</th>
                            <th>Tổng cộng</th>
                            <th>Dư nợ</th>
                        </tr>
                    </thead>
                    <tbody id="tbdReport"></tbody>
                </table>

            </div>
        </div>

    </div>
</div>


