
@{
    ViewBag.Title = "InventoryChart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<div class="box box-danger">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Biểu đồ tồn kho</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-7">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Kho hàng</label>
                            <select id="ddl" style="width:100%;" class="form-control select2 input-sm select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                                <option value="">--Chọn--</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Từ ngày </label>
                            <input type="text" id="txtFrom" value="05/05/2019" class="form-control input-datepicker input-sm">
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group">
                            <label>Đến ngày</label>
                            <input type="text" id="txtTo" value="05/10/2019" class="form-control input-datepicker input-sm">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div id="pie">
                    <div id="pie-chart" style="height: 300px; width: 100%;"></div>
                </div>

            </div>
        </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <button class="btn btn-primary btn-sm" style="width: 80px" id="btnSearch">Tìm kiếm</button>
                            <button class="btn btn-warning btn-sm" style="width: 80px" id="btnExcel">Xuất excel</button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <table id="tblReport" class="table table-bordered table-hover">
                            <thead class="scroll-table">
                                <tr class="success">
                                    <th>Kho hàng</th>
                                    <th>Giá trị nhập hàng</th>
                                    <th>Giá trị bán hàng</th>
                                    <th>Lợi nhuận</th>
                                </tr>
                            </thead>
                            <tbody id="tbdReport">
                                <tr>
                                    <td>Tất cả kho hàng</td>
                                    <td>33,650,000(33.65%)</td>
                                    <td>50,000,000(50.00%)</td>
                                    <td>16,350,000(16.35%)</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>

            </div>
        </div>

<script>
    $(document).ready(function () {
        var chart = new CanvasJS.Chart("pie-chart", {
            animationEnabled: true,
            title: {
                text: "Biểu đồ tồn kho tất cả kho hàng"
            },
            data: [{
                type: "pie",
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: [
                    { y: 16.35, label: "Lợi nhuận ước tính" },
                    { y: 50, label: "Giá trị tính theo giá bán" },
                    { y: 33.65, label: "Giá trị tính theo giá nhập" },
                ]
            }]
        });
        chart.render();
    });
 

</script>