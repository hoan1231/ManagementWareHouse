
@{
    ViewBag.Title = "ListSupplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryUrl/jquery.url.js" type="text/javascript"></script>
<link href="/crm_manager/CSS/Menu.css" rel="stylesheet" />
<script src="/crm_manager/js/jquery.mptelecom.js"></script>
<script src="~/ware_user/Js/Supplier.js"></script>
<link rel="stylesheet" href="/Content/dist/checkstyle/build.css" />
<div class="box box-danger">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Nhà cung cấp</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Tên nhà cung cấp</label>
                    <input type="text" placeholder="Nhập tên nhà cung cấp" id="txtName" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" placeholder="Nhập địa chỉ" id="txtAddress" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Số hotline</label>
                    <input type="text" placeholder="Nhập số hotline" id="txtPhoneHotline" class="form-control input-sm">
                </div>
            </div>
        </div>
        <div class="row">
           
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" placeholder="Nhập số điện thoại" id="txtPhone" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" placeholder="Nhập email" id="txtEmail" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Ghi chú</label>
                    <input type="text" placeholder="ghi chú" id="txtNote" class="form-control input-sm">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <button id="btnSearch" class="btn btn-primary btn-sm" type="button">
                        <i class="fa fa-search"></i>&nbsp; Tìm kiếm
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnUpdate" style="display:none;"><i class="fa fa-check"></i> Cập nhật</button>
                    <button class="btn btn-primary btn-sm" id="btnAdd"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                </div>
            </div>
        </div>
        <div>
            <table id="tblSupplier" class="table table-bordered table-hover">
                <thead class="scroll-table">
                    <tr class="success">
                        <th>STT</th>
                        <th>Tên nhà cung cấp</th>
                        <th>Địa chỉ</th>
                        <th>Ngày sinh</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Nhóm nhà cung cấp</th>
                        <th>Công cụ</th>
                    </tr>
                </thead>
                <tbody id="tbdSupplier">
                    <tr>
                        <td>1</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><i class="fa fa-edit fa-lg text-info mp-pointer-st" tooltip="Sửa"></i><i style="margin-left:5px;" class="fa fa-trash-o fa-lg text-red mp-pointer-st" tooltip="Xóa"></i></td>
                    </tr>
                </tbody>

            </table>
        </div>
        <div class="bs-example">
            <div class="btn-toolbar text-center">
                <div class="btn-group btn-group-sm" id="pageAsign">
                </div>
            </div>
        </div>


    </div>
</div>