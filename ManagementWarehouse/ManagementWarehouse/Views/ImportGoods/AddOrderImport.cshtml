
@{
    ViewBag.Title = "ListOrderImport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryUrl/jquery.url.js" type="text/javascript"></script>
<link href="/crm_manager/CSS/Menu.css" rel="stylesheet" />
<script src="/crm_manager/js/jquery.mptelecom.js"></script>
<script src="~/ware_import/Js/AddOrderImport.js"></script>
<link rel="stylesheet" href="/Content/dist/checkstyle/build.css" />
<div class="box box-danger">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Tạo đơn nhập hàng</h3>
    </div>
    <div class="box-body">

        <!-- Modal -->

        <div class="row">
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Chọn kho hàng</label>
                    <select class="form-control input-sm select2">
                        <option value="">-Chọn-</option>


                    </select>
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Số tham chiếu</label>
                    <input type="text" placeholder="Nhập số tham chiếu" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Ngày nhập</label>
                    <input type="text" class="form-control pull-right input-sm" placeholder="dd/mm/yyyy">
                </div>
            </div>


        </div>
        <div class="row">

            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control input-sm select2">
                        <option value="">-Chọn-</option>
                    </select>
                </div>

            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Chọn nhà cung cấp</label>
                    <select class="form-control input-sm " tabindex="-1" aria-hidden="true" id="ddlSupplier">
                        <option value="">-Chọn-</option>
                    </select>
                </div>

            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Tài liệu đính kèm</label>
                    <input type="file" placeholder="Chọn file" class="form-control input-sm">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6 col-lg-6">
                <div class="form-group">
                    <label>Chọn sản phẩm</label>
                    <div class="input-group input-group-sm">
                        <select class="form-control input-sm " tabindex="-1" aria-hidden="true">
                            <option value="">-Chọn-</option>

                        </select>
                        <span class="input-group-btn">
                            <button id="modalAdd" type="button" class="btn btn-info btn-flat">Thêm mới sản phẩm</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover">
                    <thead class="scroll-table">
                        <tr class="success">
                            <th style="width:17%;">Mã sản phẩm</th>
                            <th style="width:33%;">Tên sản phẩm</th>
                            <th style="width:10%;">Số lượng</th>
                            <th style="width:13%;">Đơn giá</th>
                            <th style="width:11%;">Thuế(%)</th>
                            <th style="width:12%;">Thành tiền</th>
                            <th style="width:4%;"></th>
                        </tr>
                    </thead>
                    <tr ng-repeat="x in lstCategory">
                        <td>{{x.Category.CatCode}}</td>
                        <td>{{x.Category.CatName}}</td>
                        <td>
                            <input type="number" class="form-control form-control-input-popup col" ng-model="x.SoLuong" ng-change="changePrice()">
                        </td>
                        <td>
                            <input type="number" class="form-control form-control-input-popup col-2" ng-model="x.Category.PurchasePrice" ng-change="changePrice()">
                        </td>
                        <td><input type="number" class="form-control form-control-input-popup col" ng-model="x.Thue" ng-change="changePrice()"></td>
                        <td>{{x.SoLuong*x.Category.PurchasePrice}}</td>
                        <td>
                            <span ng-click="deleteCategory($index)"><i class="fa fa-fw fa-trash-o"></i></span>
                        </td>
                    </tr>

                </table>
              
            </div>
        </div>
            <span class="checkbox checkbox-success styleCheckBoxMenu">
                <input id="chkExpense" class="styled" type="checkbox">
                <label for="chkExpense">Thêm chi phí</label>
            </span>
        <div class="row" id="showExpense" style="display:none;">
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Thuế mua hàng</label>
                    <select class="form-control input-sm select2" style="width:100%;">
                        <option value="">-Chọn-</option>
                    </select>
                </div>

            </div>

            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Phí vận chuyển</label>
                    <input type="text" placeholder="" class="form-control input-sm">
                </div>
            </div>
            <div class="col-md-3 col-xs-6 col-lg-3">
                <div class="form-group">
                    <label>Chi phí khác</label>
                    <input type="text" placeholder="" class="form-control input-sm">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6 col-lg-6">
                <div class="form-group">
                    <label>Ghi chú</label>
                    <textarea class="form-control" rows="5" placeholder="Ghi chú" id="txtDecription"></textarea>
                </div>
            </div>
            <div class="col-md-6">
                <br />
                <div class="row">
                    <div class="col-md-8" style="font-size: 17px; padding-bottom: 4px;">
                        Số lượng
                    </div>
                    <div class="col-md-4 float-right" style="font-size:17px;">
                        {{sumCount}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" style="font-size: 17px; padding-bottom: 4px;">
                        Tiền hàng
                    </div>
                    <div class="col-md-4 float-right" style="font-size:17px;">
                        {{sumPrice}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" style="font-size: 17px; padding-bottom: 4px;">
                        VAT
                    </div>
                    <div class="col-md-4 float-right" style="font-size:17px;">
                        {{sumVat}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" style="font-size: 17px; padding-bottom: 4px;">
                        <b>Thành tiền</b>
                    </div>
                    <div class="col-md-4 float-right" style="font-size:17px;">
                        <b>{{sumPrice+sumVat}}</b>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12" style="background:#bbccdd; margin:5px;padding:24px;">
                <div class="col-md-8"></div>
                <div class="col-md-4">

                    <input type="button" class="btn btn-primary btn-sm" style="width: 103px;height: 41px;font-size: 14px; margin-left:80px;" value="Lưu đơn hàng" ng-click="saveOrder()">
                    <input type="button" class="btn btn-primary btn-sm" style="width: 103px;height: 41px;font-size: 14px;" value="Hủy">

                </div>
            </div>
        </div>

    </div>
</div>
