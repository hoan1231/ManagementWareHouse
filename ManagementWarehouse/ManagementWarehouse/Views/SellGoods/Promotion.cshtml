
@{
    ViewBag.Title = "Promotion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryUrl/jquery.url.js" type="text/javascript"></script>
<link href="/crm_manager/CSS/Menu.css" rel="stylesheet" />
<script src="/crm_manager/js/jquery.mptelecom.js"></script>
<script src="~/ware_sell/Js/Promotion.js"></script>
<link rel="stylesheet" href="/Content/dist/checkstyle/build.css" />

<div class="box box-warning">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Thẻ giảm giá</h3>
        <span style="float:right;">
            <a data-toggle="dropdown" class="dropdown-toggle" id="modalAdd" href="#">
                <i class="fa fa-plus-circle" data-placement="left" title="" data-original-title="Thêm mới"></i>Thêm mới
            </a>
        </span>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Khách hàng</label>
                    <select id="ddlCustomer" style="width:100%;" class="form-control select2 input-sm select2-hidden-accessible" tabindex="-1" aria-hidden="true">
                        <option value="">--Chọn--</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Hạn sử dụng từ ngày </label>
                    <input type="text" id="txtFrom" class="form-control input-datepicker input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Hạn sử dụng đến ngày</label>
                    <input type="text" id="txtTo" class="form-control input-datepicker input-sm">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="form-group">
                <button id="btnSearch" class="btn btn-primary btn-sm" type="button">
                    <i class="fa fa-search"></i>&nbsp; Tìm kiếm
                </button>
                <button id="btnExport" type="button" class="btn btn-warning btn-sm">
                    <i class="fa fa-file-excel-o">&nbsp;Xuất Excel</i>
                </button>
            </div>
           
        </div>
    </div>
    <hr>
    <div class="box box-warning">
        <div class="box-header with-border">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Danh sách khuyến mại(thẻ)</h3>
        </div>
        <div class="box-body">
            <div style="overflow: auto">
                <table id="tblPromotion" class="table table-bordered table-hover">
                    <thead class="scroll-table">
                        <tr class="success">
                            <th>STT</th>
                            <th>Số thẻ</th>
                            <th>Giá trị</th>
                            <th>Dư nợ</th>
                            <th>Khách hàng</th>
                            <th>Hạn sử dụng</th>
                            <th>Người tạo</th>
                            <th>Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody id="tbdPromotion">
                        <tr>
                            <td>1</td>
                            <td>20190512002242252</td>
                            <td>200000</td>
                            <td>0</td>
                            <td>Nguyễn Văn A</td>
                            <td>22/09/2019</td>
                            <td>admin</td>
                            <td><i class="fa fa-edit fa-lg text-info mp-pointer-st modalAdd" tooltip="Sửa"></i>
                            <i style="margin-left:5px;" class="fa fa-trash-o fa-lg text-red mp-pointer-st" tooltip="Xóa"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>