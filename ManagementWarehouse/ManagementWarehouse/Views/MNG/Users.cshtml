@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryEditTable/jquery.editable-1.3.3.js"></script>
<link href="/Content/dist/CheckStyle/build.css" rel="stylesheet" />

<script src="/crm_manager/Js/User.js"></script>

<div class="box box-danger">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Danh sách tài khoản</h3>
        <input style="display:none" type="text" name="fakeusernameremembered" />
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <button id="btnUpdate" class="btn btn-primary btn-sm update" type="button">
                        <i class="fa fa-circle-o"></i>&nbsp; Cập nhật
                    </button>
                    
                    <button class="btn btn-primary btn-sm" id="btnAdd" type="button">
                        <i class="fa fa-circle-o"></i>&nbsp; Thêm mới
                    </button>

                    <button id="btnImport" class="btn btn-success btn-sm" type="button">
                        <i class="fa fa-download"></i>&nbsp; Import data
                    </button>
                </div>
            </div>
        </div>
        <div class="row import-data-panel" style="display: none">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>File data(.xls, .xlsx)</label>
                    <div class="input-group">
                        <input id="fileupload" class="form-control input-sm fileupload" accept=".xlsx,.xls" type="file" />
                        <div class="input-group-addon btn btn-primary" id="btTemp">
                            <i class="fa fa-cloud-download"></i>&nbsp Tải mẫu file
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row import-data-panel" style="display: none">
            <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12">
                <div class="form-group">
                    <button type="button" class="btn btn-primary btn-sm" id="btUpLoad">
                        <i class="fa fa-cloud-upload"></i>&nbsp Import
                    </button>
                    <button type="button" id="btnCancle" class="btn btn-waring btn-sm btn-import-back">Hủy</button>
                </div>
            </div>
        </div>
        <table class="table no-margin table-hover tbUser" id="tblUser">
            <thead>
                <tr class="success">
                    <th>#</th>
                    <th>Họ tên</th>
                    <th>Tên đăng nhâp</th>
                    <th>Email</th>
                    <th>Công cụ</th>
                </tr>
            </thead>
            <tbody id="tbdUser"></tbody>
        </table>
    </div>
</div>


<div id="myModal" class="modal fade" data-backdrop="static" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4  class="modal-title">Thêm mới tài khoản</h4>
            </div>
            <div class="modal-body" id="modalEmail">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <input type="text" id="txtFullName" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" id="txtUserLogin" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pass">
                        <div class="form-group">
                            <label>Mật Khẩu</label>
                            <input type="password" id="txtPass" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pass">
                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            <input type="password" id="txtRePass" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" id="txtEmail" class="form-control input-sm" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="closeModel" class="btn btn-default pull-left" data-dismiss="modal">Đóng</button>
                @*<button id="btnAdd" class="btn btn-primary btn-sm add" type="button">
                    &nbsp; Thêm mới
                </button>*@
            </div>
        </div>
    </div>
</div>


<div id="modalSetRole" class="modal fade" data-backdrop="static">
    <div class="modal-dialog" style="margin-top:6%;">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Thiết lập quyền</h6>
            </div>

            <div class="modal-body">
                <div class="form-group pt-15">
                    <label class="display-block text-semibold">Chọn quyền</label>
                    <div id="lstRole"></div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-link" data-dismiss="modal">Đóng</button>
                <button class="btn btn-primary" id="SaveRole">Lưu quyền</button>
            </div>
        </div>
    </div>
</div>
