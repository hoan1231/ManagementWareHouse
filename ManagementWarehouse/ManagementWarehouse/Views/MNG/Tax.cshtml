
@{
    ViewBag.Title = "Tax";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fromDate = ViewData["fromDate"];
    var toDate = ViewData["toDate"];
}
<script src="/Content/plugins/Toastrjs/toastr.min.js"></script>
<link rel="stylesheet" href="/Content/plugins/Toastrjs/toastr.min.css" />
<script src="/Content/plugins/jQueryUrl/jquery.url.js" type="text/javascript"></script>
<link href="/crm_manager/CSS/Menu.css" rel="stylesheet" />
<script src="/crm_manager/js/jquery.mptelecom.js"></script>
<script src="~/crm_manager/Js/Tax.js"></script>
<link rel="stylesheet" href="/Content/dist/checkstyle/build.css" />
<div class="box box-warning">
    <div class="box-header with-border">
        <i class="ion ion-clipboard"></i>
        <h3 class="box-title">Thuế suất</h3>
        <span style="float:right;">
            <a data-toggle="dropdown" class="dropdown-toggle modalAddTax"  href="#">
                <i class="fa fa-plus-circle" data-placement="left" title="" data-original-title="Thêm mới"></i>Thêm mới
            </a>
        </span>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Tên thuế suất</label>
                    <input type="text" id="txtNameTax" class="form-control input-sm">
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Từ ngày</label>
                    <input type="text" id="txtFromDate" value="@fromDate" class="form-control input-datepicker input-sm" />
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>Đến ngày</label>
                    <input type="text" id="txtToDate" value="@toDate" class="form-control input-datepicker input-sm" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <button id="btnSearch" class="btn btn-primary btn-sm" type="button">
                    <i class="fa fa-search"></i>&nbsp; Tìm kiếm
                </button>
                <button id="btnExport" type="button" class="btn btn-warning btn-sm">
                    <i class="fa fa-file-excel-o">&nbsp;Xuất Excel</i>
                </button>
            </div>
        </div>
        <hr>
        <div class="box box-warning">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Kết quả tìm kiếm</h3>
            </div>
            <div class="box-body Tax">
                <div style="overflow: auto">
                    <table id="tblTax" class="table table-bordered table-hover">
                        <thead>
                            <tr class="success">
                                <th>STT</th>
                                <th>Tên thuế suất</th>
                                <th>Mã thuế suất</th>
                                <th>Giá trị</th>
                                <th>Loại</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbdTax">
                            <tr>
                                <td>1</td>
                                <td>VAT 10%</td>
                                <td>VAT10</td>
                                <td>10.00</td>
                                <td>Tỷ lệ phần trăm</td>
                                <td><i class="fa fa-edit fa-lg text-info mp-pointer-st modalEditFax" tooltip="Sửa"></i><i style="margin-left:5px;" class="fa fa-trash-o fa-lg text-red mp-pointer-st" tooltip="Xóa"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
           
        </div>
    </div>
</div>

