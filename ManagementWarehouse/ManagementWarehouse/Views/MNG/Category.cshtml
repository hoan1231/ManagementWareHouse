
@{
    /**/

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/plugins/jsTree/css/proton/style.min.css" rel="stylesheet" />
<script src="/Content/plugins/jsTree/js/jstree.min.js"></script>
<script src="/crm_manager/Js/Category.js"></script>

<div class="row">
    <div class="col-md-4">
        <div class="box box-danger">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">Danh sách</h3>
            </div>
            <div class="box-body" style="max-height: 600px; overflow: auto;">
                <div id="ajax" class="demo"></div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="box box-warning cattype-panel">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title update" style="display:none"></h3>
                <h3 class="box-title add">Thêm mới</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Loại danh mục</label>
                            <input id="txtName" type="text" placeholder="Nhập loại danh mục" Class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-4 PhanNhom-panel">
                        <div class="form-group">
                            <label>Phân nhóm</label>
                            <select id="ddlPhanNhom" class="form-control select2">
                                <option value="" selected="selected">-Chọn-</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4" style="display: none">
                        <div class="form-group">
                            <label>Mã loại</label>
                            <input id="txtCode" type="text" Class="form-control input-sm" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <button class="btn btn-success btn-sm" type="button" id="btnAddNewCatType">Thêm mới</button>
                            <button class="btn btn-success btn-sm" type="button" id="btnUpdateCatType" style="display:none"><i class="fa fa-edit fa-lg"></i>&nbsp;Cập nhật</button>
                            <button class="btn btn-warning btn-sm" type="button" id="btnCancelUpdateCatType" style="display:none">Hủy</button>
                            <br /><code class="lbCatTypeHelper" style="display:none"></code>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered table-hover tblCatType">
                            <thead>
                                <tr class="success">
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Mã loại
                                    </th>
                                    <th>
                                        Loại danh mục
                                    </th>
                                    <th style="width: 5%; text-align: center"></th>
                                    <th style="width: 5%; text-align: center"></th>
                                </tr>
                            </thead>
                            <tbody id="tbdCatType"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-danger category-panel" style="display:none">
            <div class="box-header with-border">
                <i class="ion ion-clipboard"></i>
                <h3 class="box-title">
                    Chi tiết:<code ID="lblTitle"></code>
                </h3>
                <div class="row">
                    <div class="col-md-4 col-xs-6 col-lg-4">
                        <div class="form-group">
                            <label id="lblCatCode">Mã danh mục</label>
                            <input type="text" id="txtCatCode" placeholder="Mã danh mục" class="form-control input-sm" />
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-6 col-lg-4">
                        <div class="form-group">
                            <label id="lblName">Tên danh mục</label>
                            <input type="text" id="txtCatName" placeholder="Tên danh mục" class="form-control input-sm" />
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-8 col-xs-12 col-lg-8">
                        <div class="form-group">
                            <label id="lblName">Diễn giải</label>
                            <textarea id="txtDes" rows="3" placeholder="Nhập nội dung" class="form-control input-sm"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input type="button" id="btnAddCategory" value="Thêm mới" class="btn btn-primary btn-sm" />
                            <button type="button" id="btnUpdateCategory" class="btn btn-success btn-sm" style="display:none"><i class="fa fa-edit fa-lg"></i>&nbsp;Cập nhật</button>
                            <button type="button" id="btnCancelUpdateCategory" class="btn btn-warning btn-sm" style="display:none">Hủy</button>
                            <br /><code class="lbCategoryHelper" style="display:none"></code>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover tblCategory" style="width: 100%; word-wrap: break-word">
                        <thead>
                            <tr class="success">
                                <th>
                                    STT
                                </th>
                                <th>
                                    Tên danh mục
                                </th>
                                <th>
                                    Mã danh mục
                                </th>
                                <th style="width: 5%; text-align: center"></th>
                                <th style="width: 5%; text-align: center"></th>
                            </tr>
                        </thead>
                        <tbody id="tbdCategory"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
